{
  "name": "retro-arcade",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:update-snapshots": "playwright test --update-snapshots",
    "test:a11y": "playwright test e2e/tests/accessibility/",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\" \"e2e/**/*.ts\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"e2e/**/*.ts\" \"tests/**/*.js\"",
    "typecheck": "tsc --noEmit -p jsconfig.json || true",
    "size": "size-limit",
    "size:why": "size-limit --why"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@playwright/test": "^1.57.0",
    "@size-limit/file": "^11.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.55.0",
    "jsdom": "^23.0.0",
    "prettier": "^3.2.0",
    "size-limit": "^11.0.0",
    "terser": "^5.46.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
